<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pub_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin_small"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_pub_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="out topic" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pub_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin_small"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_pub_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pub msg" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <android.support.design.button.MaterialButton
        android:id="@+id/btn_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/btn_margin"
        android:layout_marginRight="@dimen/btn_margin"
        android:background="@drawable/sp_round_blue"
        android:text="Publish"
        android:textColor="@color/white" />

</LinearLayout>